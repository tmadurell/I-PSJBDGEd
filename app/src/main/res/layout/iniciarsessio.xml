<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#6B8AB0"
tools:context=".Iniciarsessio">

    <ImageView
        android:id="@+id/equis"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/x"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/atras"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/flecha"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="254dp"
        android:layout_height="101dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="92dp"
        android:text="¡Bienvenidx de nuevo!"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="212dp"
        android:background="@color/white"
        android:hint="    Usuario/Email"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="300dp"
        android:background="@color/white"
        android:hint="    Contraseña"
        android:inputType="textPassword"
        android:textAlignment="inherit"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/iniciarsesion"

        android:layout_width="214dp"
        android:layout_height="51dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="496dp"
        android:background="@drawable/vrodo"

        android:text="Iniciar Sesion"
        android:textColor="@color/black"

        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contrasenya"
        android:layout_width="242dp"
        android:layout_height="27dp"
        android:layout_marginTop="552dp"
        android:text="¿Olvidaste la contraseña?"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/irAlRegistro2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="172dp"
        android:layout_marginTop="616dp"
        android:text="Crear cuenta"
        android:textColor="#FFF500"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.725"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/irAlRegistro1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="616dp"
        android:text="¿No tienes una cuenta?"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.182"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="380dp"
        android:text="Al registrarte o iniciar sesión, aceptas nuestros Términos y Condiciones y la Política de Privacidad"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>