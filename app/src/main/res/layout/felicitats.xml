<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6B8AB0"
    tools:context=".Felicitats">


    <TextView
        android:id="@+id/textView"
        android:layout_width="260dp"
        android:layout_height="58dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="116dp"
        android:text="¡Felicidades!"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="326dp"
        android:layout_height="53dp"
        android:layout_marginTop="104dp"
        android:layout_marginRight="24dp"
        android:text="Ya te has registrado"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/irAPP"

        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/vrodo"
        android:text="Ir a la APP"
        android:textColor="@color/black"

        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.367"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contrasenya"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="392dp"
        android:gravity="center"
        android:text="No olvides visitar tu perfil para modificar y terminar de añadir los ultimos datos personales. Y también validar tu cuenta en tu correo electrónico"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bien"
        android:layout_width="116dp"
        android:layout_height="131dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="190dp"
        android:rotationY="-180"
        android:src="@drawable/bien"
        app:layout_constraintEnd_toStartOf="@id/bien2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="139dp"
        android:layout_height="150dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/aplausos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426" />

    <ImageView
        android:id="@+id/bien2"
        android:layout_width="116dp"
        android:layout_height="131dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/bien"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.287" />


</androidx.constraintlayout.widget.ConstraintLayout>