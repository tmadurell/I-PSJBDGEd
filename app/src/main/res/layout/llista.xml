<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#606060"
    tools:context=".Llista">

    <ScrollView
        android:id="@+id/scrollView6"
        android:layout_width="417dp"
        android:layout_height="664dp"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="67dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:text="











 "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="390dp"
                android:layout_height="66dp"
                android:layout_marginTop="34dp"
                android:text="Esta es tu lista personal de uso libre:"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/FP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peliculas Favoritas:"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/sonic"
                android:layout_width="246dp"
                android:layout_height="152dp"
                android:src="@drawable/sonic" />

            <TextView
                android:id="@+id/FV"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:gravity="center|left"
                android:text="Videojuegos Favoritos:"
                android:textColor="@color/black"
                android:textSize="25sp" />
            <ImageView
                android:id="@+id/minecraft"
                android:layout_width="246dp"
                android:layout_height="152dp"
                android:gravity="start"
                android:src="@drawable/minecraft" />

            <TextView
                android:id="@+id/FS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="Series Favoritas:"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/simpsons"
                android:layout_width="246dp"
                android:layout_height="152dp"
                android:gravity="start"
                android:src="@drawable/simpsons" />


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/barrasuperior"
        android:layout_width="423dp"
        android:layout_height="63dp"
        android:layout_marginBottom="659dp"
        android:background="#48A4B0"
        android:text=""
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="159dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="112dp"
        android:src="@drawable/logotip"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/llupa"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/llupa"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/barritas"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="340dp"
        android:src="@drawable/barritas"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>